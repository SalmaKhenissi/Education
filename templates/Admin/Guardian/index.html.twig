{% extends 'admin-base.html.twig' %}


{% block body %}
<!--== BODY INNER CONTAINER ==-->
            <div class="sb2-2">
            <!--== breadcrumbs ==-->
                <div class="sb2-2-2">
                    <ul>
                        <li><a href="{{path('admin_dashbord')}}"><i class="fa fa-home" aria-hidden="true"></i> Acceuil</a>
                        </li>
                        <li class="active-bre"><a href="#"> Parents</a>
                        </li>
                        <li class="active-bre"><a href="{{ path('admin_teacher_index')}}"> Liste des Parents</a>
                        </li>
                    </ul>
                </div>
                <div class="sb2-2-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-inn-sp">
                                <div class="inn-title">
                                    <div class="container">
                                        <h4>Parents </h4>
                                        <form class=" form-row">
                                                <div class="col" >
                                                    <input type="text" class="form-control" placeholder="Prénom" name="first" >
                                                </div>
                                                <div class="col">
                                                     <input type="text" class="form-control" placeholder="Nom" name="last" >
                                                </div>
                                                <div class="col">
                                                     <input type="submit"  value="Rechercher">
                                                </div>
                                        </form>
                                    </div>
                                    
                                </div>
                                <div class="tab-inn">
                                    <div class="table-responsive table-desi">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Prénom</th>
                                                    <th>Nom</th>
													<th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            
                                            {% for g in guardians %}
                                                <tr>
                                                    <td>{{ g.firstName}}</td>
                                                    <td>{{ g.LastName}}</td>
                                                    <td>
                                                        <a href="{{ path('admin_guardian_show', {'id': g.id}) }}" class="ad-st-view">Voir</a>
                                                        <a href="{{ path('admin_guardian_edit', {'id': g.id}) }}" ><span class="label label-success"> Modifier</span></a> 
                                                    </td>
											     </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pagination">
                    {{ knp_pagination_render(guardians) }}
                </div>
            </div>
{% endblock %}