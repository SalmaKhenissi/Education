{% extends 'admin-base.html.twig' %}


{% block body %}
<!--== BODY INNER CONTAINER ==-->
            <div class="sb2-2">
                <!--== breadcrumbs ==-->
                <div class="sb2-2-2">
                    <ul>
                        <li><a href="{{path('admin_dashbord')}}"><i class="fa fa-home" aria-hidden="true"></i> Acceuil</a>
                        </li>
                        <li class="active-bre"><a href="#"> Paramétres du site</a>
                        </li>
                        <li class="active-bre"><a href="#"> Paramétres services</a>
                        </li>
                    </ul>
                </div>

                <!--== User Details ==-->
                <div class="sb2-2-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-inn-sp">
                                <div class="inn-title">
                                    <h4>Paramétres services</h4>
                                </div>
                                <div class="tab-inn">
                                    <div class="table-responsive table-desi">
                                    {% for message in app.flashes('success') %}
                                            <div class="alert alert-success" >{{ message }}</div>
                                        {% endfor %}
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Titre</th>
													<th>Mise à jour</th>
                                                    <th>Détails</th>
													<th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                           {% for d in descriptions %}
                                                <tr>
                                                    <td>{{d.title}}</td>
                                                    <td>{{d.updatedAt|date("d/m/Y h:m") }}</td>
												    <td><a href="{{path('admin_parameter_show_desc' , {'id':d.id})}}" class="btn btn-info fa fa-eye"></a></td>
                                                    <td><a href="{{path('admin_parameter_edit_desc' , {'id':d.id})}}" class="btn btn-warning fa fa-pencil"></a></td>
                                                </tr>
                                            {% endfor %}   
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        <div class="pagination" >
                    {{ knp_pagination_render(descriptions) }}
        </div>
            </div>

        </div>
        
    </div>
{% endblock %}