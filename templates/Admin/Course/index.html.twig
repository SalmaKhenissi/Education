{% extends 'admin-base.html.twig' %}


{% block body %}
<!--== BODY INNER CONTAINER ==-->
            <div class="sb2-2">
            <!--== breadcrumbs ==-->
                <div class="sb2-2-2">
                    <ul>
                        <li><a href="{{path('admin_dashbord')}}"><i class="fa fa-home" aria-hidden="true"></i> Acceuil</a>
                        </li>
                        <li class="active-bre"><a href="#"> Cours</a>
                        </li>
                        <li class="active-bre"><a href="{{ path('admin_course_index')}}"> Liste des Cours</a>
                        </li>
                    </ul>
                </div>
                <div class="sb2-2-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-inn-sp">
                                <div class="inn-title">
                                    <div class="container">
                                        <h4>Cours </h4>
                                        
                                    </div>
                                    
                                </div>
                                <div class="tab-inn">
                                    <div class="table-responsive table-desi">
                                        {#<form class=" form-row">
                                                <div class="col" >
                                                    <input type="text" class="form-control" placeholder="Nom" name="first" style="border-style: ridge;"  >
                                                </div>
                                                <div class="col" >
                                                    <input type="text" class="form-control" placeholder="Niveaux" name="first" style="border-style: ridge;"  >
                                                </div>
                                                <div class="col">
                                                     <input type="text" class="form-control" placeholder="Spécialité" name="last" style="border-style: ridge;"  >
                                                </div>
                                                <div class="col">
                                                     <input type="submit"  value="Rechercher">
                                                </div>
                                        </form>#}
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Nom</th>
                                                    <th>Niveaux</th>
                                                    <th>Spécialité</th>
                                                    <th>Coefficient</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            
                                            {% for c in courses %}
                                                <tr>
                                                    <td>{{ c.libelle }}</td>
                                                    <td>{{ c.level }}</td>
                                                    <td>{{ c.specialty }}</td>
                                                    <td>{{ c.coefficient }}</td>
                                                    <td>
                                                        <a href="{{ path('admin_course_edit', {'id': c.id}) }}" ><span class="fa fa-pencil"> Modifier</span></a> 
                                                        {{ include('Admin/Course/_delete_form.html.twig') }}
                                                    </td>
											     </tr>
                                            
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pagination">
                    {{ knp_pagination_render(courses) }}
                </div>
            </div>
{% endblock %}

        
