{% extends 'front-base.html.twig  ' %}
{% block body %}

    

    <section class="pop-cour">
        <div class="container com-sp pad-bot-70">
            <div class="row">
                <div class="con-title">
                    <h2>Liste des <span>Clubs</span></h2>
                    <p>Fusce id sem at ligula laoreet hendrerit venenatis sed purus. Ut pellentesque maximus lacus, nec pharetra augue.</p>
                    <div class="event-head-sub">
                        <ul>
                            <li style="color:Blue;">Total des clubs : {{number}} </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div>
                <div class="ho-event pg-eve-main pg-blog">
                    <ul>
                    {% for c in clubs %}
                        <li>
                            <div class="pg-eve-desc pg-blog-desc">
                                <a href="#"><h4>{{c.name}}</h4></a>
								<img src="{{ '/Pro-Education/public' ~ vich_uploader_asset( c ,'imageFile') }}" alt="club_image">
                                {% autoescape false %}
								    <p>{{c.shortDescription}}</p>
                                {% endautoescape %}
                            </div>
                            <div class="pg-eve-reg pg-blog-reg">
                                <a href="{{ path('club' , {'id':c.id})}}">Lire encore</a>
                            </div>
                        </li>
                     {% endfor %} 
                    </ul>
                    <div class="pagination">
                            {{ knp_pagination_render(clubs) }}
                </div>
            </div>
                </div>
                
        </div>
    </section>

   

    

   {% endblock %} 