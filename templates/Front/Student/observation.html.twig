{% extends 'front-base.html.twig  ' %}
{% block stylesheets %}
    <style>
    table, th, td {
        border: 2px solid gray;
    }
    th, td {
        padding: 10px;
        text-align: center;
        color : gray;
    }
    .color {
        background-color: #84add6;
        color: white;
    }


    </style>    
{% endblock %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        <div class="pro-menu">
            <div class="container">
                <div class="col-md-9 col-md-offset-3">
                    <ul>
                        <li><a href="{{path('student_profile', {'id': student.id})}}" >Profile</a></li>
                        <li><a href="{{path('student_timetable', {'id': student.id})}}" >Emploi du temps</a></li>
                        <li><a href="{{path('student_discipline', {'id': student.id})}}" >Discipline</a></li>
                        <li><a href="{{path('student_exams', {'id': student.id})}}">Examens</a></li>
                        <li><a href="{{path('student_result_average', {'id': student.id})}}">Résultats</a></li>
                        <li><a href="{{path('student_obs', {'id': student.id})}}" class="pro-act">Observations</a></li>
                        <li><a href="{{path('student_doc_index', {'id': student.id})}}">Documents</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Student/Profile/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">
                        <div class="udb-sec udb-cour-stat">
                            <h4><img src="{{asset('images/icon/form-2.png')}}" alt="" />Observations</h4>
                            
                            <div class="pro-con-table">
                                <table class="bordered responsive-table">
                                    <thead>
                                        <tr>
                                            <th class="color">Matiére</th>
                                            <th class="color">Description</th>
                                            <th class="color">Date</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                    {% for o in obs %}
                                        <tr>
                                            <td>{{o.teacher.specialty}}</td>
                                            <td>{{o.description}}</td>
                                            <td>{{o.postedAt|date("d/m/Y ") }}</td>
                                        </tr>
                                    {% else %}
                                    
                                     <tr><td colspan="3"> Aucune observation n'est trouvée  </td> <tr>
                                        
                                    {% endfor %}  
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="pagination">
                             {{ knp_pagination_render(obs) }}
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->


{% endblock %} 