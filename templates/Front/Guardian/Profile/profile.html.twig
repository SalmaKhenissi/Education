{% extends 'front-base.html.twig  ' %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        {{ include('Front/Guardian/Profile/_menu.html.twig') }}
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Guardian/Profile/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">

                        <div class="udb-sec udb-prof">
                            <h4><img src="{{asset('images/icon/db1.png')}}" alt="" /> Mon Profile </h4>
                            <div class="sdb-tabl-com sdb-pro-table">
                                <table class="responsive-table bordered">
                                    <tbody>
                                        <tr>
                                            <td>Cin</td>
                                            <td>:</td>
                                            <td>{{guardian.cin}} </td>
                                        </tr>
                                        <tr>
                                            <td>Nom</td>
                                            <td>:</td>
                                            <td>{{guardian.lastName}} </td>
                                        </tr>
                                        <tr>
                                            <td>Prénom</td>
                                            <td>:</td>
                                            <td>{{guardian.firstName}} </td>
                                        </tr>
                                        
                                        <tr>
                                            <td>Date de naissance</td>
                                            <td>:</td>
                                            <td>{{guardian.birthDate|date('d-m-Y')}} </td>
                                        </tr>
                                        <tr>
                                            <td>Lieu de naissance</td>
                                            <td>:</td>
                                            <td>{{guardian.birthplace}} </td>
                                        </tr>
                                        <tr>
                                            <td>Téléphone</td>
                                            <td>:</td>
                                            <td>{{guardian.tel|slice(0,2)}} {{guardian.tel|slice(2,3)}} {{guardian.tel|slice(5,3)}}</td>
                                        </tr>
                                        <tr>
                                            <td>Adresse</td>
                                            <td>:</td>
                                            <td>{{guardian.address}}</td>
                                        </tr>
                                        <tr>
                                            <td>E-mail</td>
                                            <td>:</td>
                                            <td>{{guardian.email}}</td>
                                        </tr>
                                        <tr>
                                            <td>Sexe</td>
                                            <td>:</td>
                                            <td>
                                                {% if guardian.sexe == 0 %} Homme
                                                {% elseif guardian.sexe == 1 %} Femme
                                                {% endif %}
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="sdb-bot-edit">
                                    
                                    <a href="{{path('guardian_data_edit' , {'id' : guardian.id})}}" ><i class="fa fa-pencil"></i> Modifier mon profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->
    {% endblock %} 