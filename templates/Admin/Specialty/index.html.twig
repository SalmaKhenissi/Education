                                                    <td>
                                                        <a href="{{ path('admin_specialty_edit', {'id': s.id}) }}" ><span class="label label-success"> Modifier</span></a> 
                                                    </td>
											     </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pagination">
                    {{ knp_pagination_render(specialties) }}
                </div>
            </div>
{% endblock %}

        


   

