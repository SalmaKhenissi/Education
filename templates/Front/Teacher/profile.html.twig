{% extends 'front-base.html.twig  ' %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        <div class="pro-menu">
            <div class="container">
                <div class="col-md-9 col-md-offset-3">
                    <ul>
                        <li><a href="{{path('teacher_profile', {'id': teacher.id})}}" class="pro-act">Profile</a></li>
                        <li><a href="#" >Emploi du temps</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Teacher/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">

                        <div class="udb-sec udb-prof">
                            <h4><img src="{{asset('images/icon/db1.png')}}" alt="" /> Mon Profile </h4>
                            <div class="sdb-tabl-com sdb-pro-table">
                                <table class="responsive-table bordered">
                                    <tbody>
                                        <tr>
                                            <td>Nom</td>
                                            <td>:</td>
                                            <td>{{teacher.lastName}} </td>
                                        </tr>
                                        <tr>
                                            <td>Prénom</td>
                                            <td>:</td>
                                            <td>{{teacher.firstName}} </td>
                                        </tr>
                                        
                                        <tr>
                                            <td>Date de naissance</td>
                                            <td>:</td>
                                            <td>{{teacher.birthDate|date('d-m-Y')}} </td>
                                        </tr>
                                        <tr>
                                            <td>Lieu de naissance</td>
                                            <td>:</td>
                                            <td>{{teacher.birthplace}} </td>
                                        </tr>
                                        <tr>
                                            <td>Téléphone</td>
                                            <td>:</td>
                                            <td>{{teacher.tel|slice(0,2)}} {{teacher.tel|slice(2,3)}} {{teacher.tel|slice(5,3)}}</td>
                                        </tr>
                                        <tr>
                                            <td>Adresse</td>
                                            <td>:</td>
                                            <td>{{teacher.address}}</td>
                                        </tr>
                                        <tr>
                                            <td>Sexe</td>
                                            <td>:</td>
                                            <td>{{teacher.sexe}}</td>
                                        </tr>
                                        <tr>
                                            <td>Spécialité</td>
                                            <td>:</td>
                                            <td>{{teacher.specialty}} </td>
                                        </tr>
                                        <tr>
                                            <td>Type</td>
                                            <td>:</td>
                                            <td>{{teacher.type}} </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="sdb-bot-edit">
                                    
                                    <a href="#" ><i class="fa fa-pencil"></i> Modifier mon profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->
    {% endblock %} 