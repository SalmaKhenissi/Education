{% extends 'front-base.html.twig  ' %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        {{ include('Front/Student/Document/_menu.html.twig') }}
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Student/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">
                        <div class="udb-sec udb-cour-stat">
                            <h4><img src="{{asset('images/icon/db2.png')}}" alt="" />Documents</h4>
                            
                            <div class="pro-con-table">
                                <table class="bordered responsive-table">
                                    <thead>
                                        <tr>
                                            <th>Mati√©re</th>
                                            <th>Type</th>
                                            <th>Description</th>
                                            <th>Date</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                    {% for d in docs %}
                                        <tr>
                                            <td>{{d.teacher.specialty}}</td>
                                            <td>{{d.type}}</td>
                                            <td>{{d.description}}</td>
                                            <td>{{d.postedAt|date("d/m/Y ") }}</td>
                                            <td><a href="{{path('student_doc_show', {'student':student.id,'doc': d.id })}}" class="btn btn-info fa fa-file-text-o"></a></td>
                                        </tr>
                                        
                                    {% endfor %}  
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="pagination">
                             {{ knp_pagination_render(docs) }}
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
