{% extends 'front-base.html.twig  ' %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        {{ include('Front/Teacher/Profile/_menu.html.twig') }}
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Teacher/Profile/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">
                        
                        <div class="udb-sec udb-prof">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success" >{{ message }}</div>
                        {% endfor %}
                            <h4><img src="{{asset('images/icon/db1.png')}}" alt="" />Profile </h4>
                            <div class="sdb-tabl-com sdb-pro-table">
                                <table class="responsive-table bordered">
                                    <tbody>
                                        <tr>
                                            <td>Cin</td>
                                            <td>:</td>
                                            <td>{{teacher.cin}} </td>
                                        </tr>
                                        <tr>
                                            <td>Nom</td>
                                            <td>:</td>
                                            <td>{{teacher.lastName}} </td>
                                        </tr>
                                        <tr>
                                            <td>Prénom</td>
                                            <td>:</td>
                                            <td>{{teacher.firstName}} </td>
                                        </tr>
                                        
                                        <tr>
                                            <td>Date de naissance</td>
                                            <td>:</td>
                                            <td>{{teacher.birthDate|date('d-m-Y')}} </td>
                                        </tr>
                                        <tr>
                                            <td>Lieu de naissance</td>
                                            <td>:</td>
                                            <td>{{teacher.birthplace}} </td>
                                        </tr>
                                        <tr>
                                            <td>Téléphone</td>
                                            <td>:</td>
                                            <td>{{teacher.tel|slice(0,2)}} {{teacher.tel|slice(2,3)}} {{teacher.tel|slice(5,3)}}</td>
                                        </tr>
                                        <tr>
                                            <td>Adresse</td>
                                            <td>:</td>
                                            <td>{{teacher.address}}</td>
                                        </tr>
                                        <tr>
                                            <td>Sexe</td>
                                            <td>:</td>
                                            <td>
                                            {% if teacher.sexe == 0 %} Homme
                                            {% elseif teacher.sexe == 1 %} Femme
                                            {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Type</td>
                                            <td>:</td>
                                            <td>{% if teacher.type == 0 %} Recruté
                                                {% elseif teacher.type == 1 %} Vacataire
                                                {% endif %}
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="sdb-bot-edit">
                                    
                                    <a href="{{path('teacher_data_edit' , {'id' : teacher.id})}}" ><i class="fa fa-pencil"></i> Modifier mon profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->
    {% endblock %} 