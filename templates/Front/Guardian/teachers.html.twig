{% extends 'front-base.html.twig  ' %}
{% block stylesheets %}
    <style>
    table, th, td {
        border: 2px solid gray;
    }
    th, td {
        padding: 10px;
        text-align: center;
        color : gray;
    }
    .color {
        background-color: #84add6;
        color: white;
    }


    </style>    
{% endblock %}
{% block body %}
    <section>
        <div class="pro-cover">
        </div>
        <div class="pro-menu">
            <div class="container">
                <div class="col-md-9 col-md-offset-3">
                    <ul>
                      <li><a href="{{path('guardian_profile', {'id': guardian.id})}}">Profile</a></li>
                        <li><a href="{{path('guardian_timetable', {'id': guardian.id})}}" >Emploi du temps</a></li>
                        <li><a href="{{path('guardian_discipline', {'id': guardian.id})}}" >Discipline</a></li>
                        <li><a href="{{path('guardian_exam_children', {'id': guardian.id})}}" >Examens</a></li>
                        <li><a href="{{path('guardian_result_average', {'id': guardian.id})}}" >Résultats</a></li>
                        <li><a href="{{path('guardian_teachers', {'id': guardian.id})}} "  class="pro-act" >Enseignants</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Guardian/Profile/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">
                        <div class="udb-sec udb-cour-stat">
                            <h4><img src="{{asset('images/icon/db1.png')}}" alt="" />Enseignants</h4>
                            
                            <div class="pro-con-table">
                                <table class="bordered responsive-table">
                                    <thead>
                                        <tr>
                                            
                                            <th class="color">Matiére</th>
                                            <th class="color">Nom & Prénom</th>
                                            <th class="color">Classe</th>
                                            <th class="color">Téléphone</th>
                                            <th class="color">E-mail</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                    
                                    {% for s in seances %}
                                            
                                            <tr>
                                                
                                                <td>
                                                    {{s.course}}
                                                </td>
                                                <td>{{s.teacher}}</td>
                                                <td>{{s.section.libelle}}</td>
                                                <td>{{s.teacher.tel|slice(0,2)}} {{s.teacher.tel|slice(2,3)}} {{s.teacher.tel|slice(5,3)}}</td>
                                                <td> {{s.teacher.email}} </td>
                                            </tr>
                                        
                                     {% endfor %}   
                                    </tbody>
                                </table>
                            </div>
                            <div class="pagination">
                                {{ knp_pagination_render(seances) }}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
  


{% endblock %} 