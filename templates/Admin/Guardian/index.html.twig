{% extends 'admin-base.html.twig' %}


{% block body %}
<!--== BODY INNER CONTAINER ==-->
            <div class="sb2-2">
            <!--== breadcrumbs ==-->
                <div class="sb2-2-2">
                    <ul>
                        <li><a href="{{path('admin_dashbord')}}"><i class="fa fa-home" aria-hidden="true"></i> Acceuil</a>
                        </li>
                        <li class="active-bre"><a href="#"> Parents</a>
                        </li>
                        <li class="active-bre"><a href="{{ path('admin_guardian_index')}}"> Liste des Parents</a>
                        </li>
                    </ul>
                </div>
                <div class="sb2-2-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-inn-sp">
                                <div class="inn-title">
                                    <div class="container">
                                        <h4>Parents </h4>
                                        
                                    </div>
                                    
                                </div>
                                <div class="tab-inn">
                                    <div class="table-responsive table-desi">
                                        {% for message in app.flashes('success') %}
                                            <div class="alert alert-success" >{{ message }}</div>
                                        {% endfor %}
                                        <form class=" form-row">
                                                <div class="col">
                                                     <input type="text" class="form-control" placeholder=" Nom" name="last" style="border-style: ridge;"  >
                                                </div>
                                                <div class="col" >
                                                    <input type="text" class="form-control" placeholder=" Prénom" name="first" style="border-style: ridge;"  >
                                                </div>
                                                <div class="col">
                                                     <input type="submit"  value="Rechercher" class="btn btn-primary btn-xs">
                                                </div>
                                        </form>
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Nom</th>
                                                    <th>Prénom</th>
                                                    <th>Détails</th>
													<th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            
                                            {% for g in guardians %}
                                                <tr>
                                                    <td>{{ g.LastName}}</td>
                                                    <td>{{ g.firstName}}</td>
                                                    <td><a href="{{ path('admin_guardian_show', {'id': g.id}) }}" class="btn btn-info fa fa-eye"></a></td>
                                                    <td>
                                                        <a href="{{ path('admin_guardian_edit', {'id': g.id}) }}" class="btn btn-warning fa fa-pencil"></a> 
                                                        {{ include('Admin/Guardian/_delete_form.html.twig') }}
                                                    </td>
											     </tr>
                                                 {% else %}
                                                <tr><td colspan="4"> Aucun parent n'est trouvé  </td> <tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pagination">
                    {{ knp_pagination_render(guardians) }}
                </div>
            </div>
{% endblock %}