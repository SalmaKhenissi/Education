{% extends 'front-base.html.twig  ' %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        <div class="pro-menu">
            <div class="container">
                <div class="col-md-9 col-md-offset-3">
                    <ul>
                        <li><a href="{{path('student_profile', {'id': student.id})}}" class="pro-act">Mon profile</a></li>
                        <li><a href="{{path('student_timetable', {'id': student.id})}}" >Mon emploi du temps</a></li>
                        <li><a href="{{path('student_absences', {'id': student.id})}}">Mes absences</a></li>
                        <li><a href="{{path('student_exams', {'id': student.id})}}">Mes examens</a></li>
                        <li><a href="{{path('student_notes', {'id': student.id})}}">Mes notes</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="stu-db">
            <div class="container pg-inn">
                <div class="col-md-3">
                    <div class="pro-user">
                        <img src="{{asset('images/student.jpg')}}" alt="user">
                    </div>
                    <div class="pro-user-bio">
                        <ul>
                            <li>
                                <h4>{{student.lastName}}  {{student.firstName}}  </h4>
                            </li>
                            <li><strong>Classe : </strong>{{student.section}}</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="udb">

                        <div class="udb-sec udb-prof">
                            <h4><img src="{{asset('images/icon/db1.png')}}" alt="" /> Mon Profile </h4>
                            <div class="sdb-tabl-com sdb-pro-table">
                                <table class="responsive-table bordered">
                                    <tbody>
                                        <tr>
                                            <td>Nom</td>
                                            <td>:</td>
                                            <td>{{student.lastName}} </td>
                                        </tr>
                                        <tr>
                                            <td>Prénom</td>
                                            <td>:</td>
                                            <td>{{student.firstName}} </td>
                                        </tr>
                                        
                                        <tr>
                                            <td>Date de naissance</td>
                                            <td>:</td>
                                            <td>{{student.birthDate|date('d-m-Y')}} </td>
                                        </tr>
                                        <tr>
                                            <td>Lieu de naissance</td>
                                            <td>:</td>
                                            <td>{{student.birthplace}} </td>
                                        </tr>
                                        <tr>
                                            <td>Adresse</td>
                                            <td>:</td>
                                            <td>N°12 rue bangladech sousse</td>
                                        </tr>
                                        <tr>
                                            <td>Sexe</td>
                                            <td>:</td>
                                            <td>{{student.sexe}}</td>
                                        </tr>
                                        <tr>
                                            <td>Classe</td>
                                            <td>:</td>
                                            <td>{{student.section}} </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="sdb-bot-edit">
                                    
                                    <a href="#" ><i class="fa fa-pencil"></i> Modifier mon profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->
    {% endblock %} 