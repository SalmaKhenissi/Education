                                        {% endfor %}
                                   {{ form_start(form)}}
                                        <div class="row">
                                            <div class="col-md-4">{{ form_row(form.students)}}</div>
                                        </div>
                                        
                                            
                                        <button class="btn">{{ button_label|default('Désaffecter') }}</button>
                                    {{ form_end(form)}}
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        
{% endblock %}