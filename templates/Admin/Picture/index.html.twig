{% extends 'admin-base.html.twig' %}


{% block body %}
<!--== BODY INNER CONTAINER ==-->
            <div class="sb2-2">
                <!--== breadcrumbs ==-->
                <div class="sb2-2-2">
                    <ul>
                        <li><a href="{{path('admin_dashbord')}}"><i class="fa fa-home" aria-hidden="true"></i> Acceuil</a>
                        </li>
                        <li class="active-bre"><a href="#"> Photos</a>
                        </li>
                        <li class="active-bre"><a href="#"> Liste des photos</a>
                        </li>
                    </ul>
                </div>

                <!--== User Details ==-->
                <div class="sb2-2-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-inn-sp">
                                <div class="inn-title">
                                    <h4>Photos</h4>
                                </div>
                                <div class="tab-inn">
                                    <div class="table-responsive table-desi">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Titre</th>
													<th>Fichier</th>
                                                    <th>Image</th>
													<th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for p in pictures %}
                                                <tr>
                                                    <td>{{p.title}}</td>
                                                    <td> {{p.imageName }}</span></td>
                                                    <td><img src="{{ '/Pro-Education/public' ~ vich_uploader_asset( p ,'imageFile') }} " alt="picture" style="width:30%; height:30%;"></span></td>
													<td><a href="{{path('admin_picture_edit' , {'id':p.id})}}" ><span class="label label-success"> Modifier</span></a> </td>
                                                </tr>
                                                {% endfor %}
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}