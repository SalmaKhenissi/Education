{% extends 'front-base.html.twig  ' %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        <div class="pro-menu">
            <div class="container">
                <div class="col-md-9 col-md-offset-3">
                    <ul>
                        <li><a href="{{path('student_profile', {'id': student.id})}}" class="pro-act">Profile</a></li>
                        <li><a href="{{path('student_timetable', {'id': student.id})}}" >Emploi du temps</a></li>
                        <li><a href="{{path('student_discipline', {'id': student.id})}}" >Discipline</a></li>
                        <li><a href="{{path('student_exams', {'id': student.id})}}">Examens</a></li>
                        <li><a href="{{path('student_notes', {'id': student.id})}}">Résultats</a></li>
                        {% if nb1 == 0 %}
                        <li><a href="{{path('student_obs', {'id': student.id})}}">Observations</a></li>
                        {% else %}
                        <li>
                            <a href="{{path('student_obs', {'id': student.id})}}" >Observations
                                <i class="fa fa-bell" style="color:red;"></i><span style="color:red;">({{nb1}})</span>
                            </a>
                        </li>
                        {% endif %}
                        {% if nb == 0 %}
                        <li><a href="{{path('student_doc_index', {'id': student.id})}}" >Documents</a></li>
                        {% else %}
                        <li>
                            <a href="{{path('student_doc_index', {'id': student.id})}}" >Documents
                                <i class="fa fa-bell" style="color:red;"></i><span style="color:red;">({{nb}})</span>
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Student/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">

                        <div class="udb-sec udb-prof">
                            <h4><img src="{{asset('images/icon/db1.png')}}" alt="" />Profile </h4>
                            <div class="sdb-tabl-com sdb-pro-table">
                                <table class="responsive-table bordered">
                                    <tbody>
                                        <tr>
                                            <td>Nom</td>
                                            <td>:</td>
                                            <td>{{student.lastName}} </td>
                                        </tr>
                                        <tr>
                                            <td>Prénom</td>
                                            <td>:</td>
                                            <td>{{student.firstName}} </td>
                                        </tr>
                                        
                                        <tr>
                                            <td>Date de naissance</td>
                                            <td>:</td>
                                            <td>{{student.birthDate|date('d-m-Y')}} </td>
                                        </tr>
                                        <tr>
                                            <td>Lieu de naissance</td>
                                            <td>:</td>
                                            <td>{{student.birthplace}} </td>
                                        </tr>
                                        <tr>
                                            <td>Adresse</td>
                                            <td>:</td>
                                            <td>N°12 rue bangladech sousse</td>
                                        </tr>
                                        <tr>
                                            <td>Sexe</td>
                                            <td>:</td>
                                            <td>{{student.sexe}}</td>
                                        </tr>
                                        <tr>
                                            <td>Classe</td>
                                            <td>:</td>
                                            <td>
                                                {% if not section == null %}
                                                    {{ section.libelle}}
                                                {% else %}
                                                    Pas encore affecté
                                                {% endif %}
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="sdb-bot-edit">
                                    
                                    <a href="#" ><i class="fa fa-pencil"></i> Modifier mon profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->
    {% endblock %} 