{% extends 'admin-base.html.twig' %}


{% block body %}
<!--== BODY INNER CONTAINER ==-->
            <div class="sb2-2">
            <!--== breadcrumbs ==-->
                <div class="sb2-2-2">
                    <ul>
                        <li><a href="{{path('admin_dashbord')}}"><i class="fa fa-home" aria-hidden="true"></i> Acceuil</a>
                        </li>
                        <li class="active-bre"><a href="#"> Salles</a>
                        </li>
                        <li class="active-bre"><a href="{{ path('admin_school_year_index')}}"> Liste des années scolaires</a>
                        </li>
                    </ul>
                </div>
                <div class="sb2-2-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-inn-sp">
                                <div class="inn-title">
                                    <div class="container">
                                        <h4>Liste des années scolaires </h4>
                                        
                                    </div>
                                    
                                </div>
                                <div class="tab-inn">
                                    <div class="table-responsive table-desi">
                                         
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Libelle</th>
                                                    <th>Début</th>
                                                    <th>Fin</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            
                                            {% for s in school_years %}
                                                <tr>
                                                    <td>{{ s.libelle }}</td>
                                                    <td>{{ s.startAt|date('Y-m-d') }}</td>
                                                    <td>{{ s.finishAt|date('Y-m-d') }}</td>
                                                    <td>
                                                        <a href="{{ path('admin_school_year_edit', {'id': s.id}) }}" ><span class="fa fa-pencil"> Modifier</span></a> 
                                                        {{ include('Admin/School_year/_delete_form.html.twig') }}

                                                    </td>
											     </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pagination">
                    {{ knp_pagination_render(school_years) }}
                </div>
            </div>
{% endblock %}

        


   

