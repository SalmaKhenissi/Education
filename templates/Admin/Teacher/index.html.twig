                                                <div class="col">
                                                     <input type="submit"  value="Rechercher" >
                                                </div>
                                        </form>
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Prénom</th>
                                                    <th>Nom</th>
													<th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            
                                            {% for t in teachers %}
                                                <tr>
                                                    <td>{{ t.firstName}}</td>
                                                    <td>{{ t.LastName}}</td>
                                                    <td>
                                                        <a href="{{ path('admin_teacher_show', {'id': t.id}) }}" class="ad-st-view">Voir</a>
                                                        <a href="{{ path('admin_teacher_edit', {'id': t.id}) }}" ><span class="label label-success"> Modifier</span></a> 
                                                    </td>
											     </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="pagination">
                    {{ knp_pagination_render(teachers) }}
                </div>
            </div>
{% endblock %}