{% extends 'front-base.html.twig  ' %}
{% block stylesheets %}
    <style>
    table, th, td {
        border: 2px solid gray;
    }
    th, td {
        padding: 10px;
        text-align: center;
        color : gray;
    }
    .color {
        background-color: #84add6;
        color: white;
    }


    </style>    
{% endblock %}
{% block body %}
    <section>
        <div class="pro-cover">
        </div>
        {{ include('Front/Guardian/Discipline/_menu.html.twig') }}
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Guardian/Profile/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">
                        
                        <div class="udb-sec udb-cour-stat">
                            <h4><img src="{{asset('images/icon/db.png')}}" alt="" />Punitions ({{punishments|length}}) : Trimestre {{parameters.quarter}}</h4>
                            
                            <div class="pro-con-table">
                                <table class="bordered responsive-table">
                                    <thead>
                                        <tr>
                                            <th class="color">Type</th>
                                            <th class="color">Date</th>
                                            <th class="color">DÃ©tails</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                    {% for p in punishments %}
                                        <tr>
                                        
                                            <td>
                                            {% if p.type == 0 %}
                                                    Avertissement
                                            {% elseif p.type == 1  %}
                                                        Exclusion
                                            {% else %}
                                                    Expulsion
                                            {% endif %}
                                            </td>
                                            <td>{{p.date|date("d/m/Y ")}}</td>
                                            <td><a href="{{path('guardian_punishment_show', {'g': guardian.id, 'id':p.id})}}" class="btn btn-info fa fa-eye"></a></td>
                                         </tr>
                                        
                                    {% endfor %}  
                                        
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
  


{% endblock %} 