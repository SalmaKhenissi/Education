{% extends 'front-base.html.twig  ' %}
{% set jours = ['Lundi', 'Mardi' , 'Mercredi' , 'Jeudi' , 'Vendredi' ,'Samedi'] %}
{% set course = ['Sc.Naturelles', 'Physique' , 'Technique' , 'Informatique' ] %}
{% set i = 0 %}
{% set exist = false %}
{% set duration = 0 %}
{% block stylesheets %}
    <style>
    table, th, td {
        border: 2px solid gray;
    }
    th, td {
        padding: 10px;
        text-align: center;
        color : gray;
    }
    .color {
        background-color: #84add6;
        color: white;
    }
    .stripe-2 {
        color: black;
        background: repeating-linear-gradient(
            45deg,
            transparent,
            transparent 10px,
            #ccc 10px,
            #ccc 20px
        ),
        linear-gradient(
            to bottom,
            #eee,
            #999
        )
    }


    </style>    
{% endblock %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        <div class="pro-menu">
            <div class="container">
                <div class="col-md-9 col-md-offset-3">
                    <ul>
                        <li><a href="{{path('student_profile', {'id': student.id})}}">Profile</a></li>
                        <li><a href="{{path('student_timetable', {'id': student.id})}}" class="pro-act" >Emploi du temps</a></li>
                        <li><a href="{{path('student_discipline', {'id': student.id})}}" >Discipline</a></li>
                        <li><a href="{{path('student_exams', {'id': student.id})}}">Examens</a></li>
                        <li><a href="{{path('student_result_average', {'id': student.id})}}">RÃ©sultats</a></li>
                        <li><a href="{{path('student_obs', {'id': student.id})}}">Observations</a></li>
                        <li><a href="{{path('student_doc_index', {'id': student.id})}}" >Documents</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Student/Profile/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">

                        <div class="udb-sec udb-time">
                            <h4><img src="{{asset('images/icon/db4.png')}}" alt="" />Emploi du temps
                             &nbsp;&nbsp;
                                 <a href="{{path('student_timetable2', {'id': student.id})}}" class="fa fa-download " style="color : gray"> </a>
                            
                            </h4>
                            
                            <div >
                                <table >
                                                <thead>
                                                    <tr>
                                                        <th scope="col" class="color">#</th>
                                                        <th scope="col" class="color">08:00<br>09:00</th>
                                                        <th scope="col" class="color">09:00<br>10:00</th>
                                                        <th scope="col" class="color">10:00<br>11:00</th>
                                                        <th scope="col" class="color">11:00<br>12:00</th>
                                                        <th scope="col" class="color">14:00<br>15:00</th>
                                                        <th scope="col" class="color">15:00<br>16:00</th>
                                                        <th scope="col" class="color">16:00<br>17:00</th>
                                                        <th scope="col" class="color">17:00<br>18:00</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                {% for tab in timetable %}
                                                    
                                                    <tr>
                                                        <th scope="row" class="color">{{ jours[ i ] }}</th>
                                                        
                                                        {% for k in range(8,11)  %}
                                                                
                                                                {% for s in tab %}
                                                                    {% set start = s.startAt|date("h") %}
                                                                    
                                                                    {% if (start == k ) %}
                                                                        
                                                                            {% set finish = s.finishAt|date("h") %} 
                                                                            {% set duration = finish - start %}
                                                                            {% if duration == 2 %}
                                                                                {% if s.course.libelle in course %}
                                                                                    <td colspan="2"  > 
                                                                                        {{s.course}} S{{s.room.number}}
                                                                                        {% for s2 in tab %}
                                                                                            {% set start = s2.startAt|date("h") %}
                                                                                            {% if (start == k ) %}
                                                                                                {% if not (s2.course == s.course ) %}
                                                                                                    <br> {{s2.course}} S{{s2.room.number}}
                                                                                                    {% set k = k + 1  %}
                                                                                                {% endif %}
                                                                                            {% endif %}
                                                                                        {% endfor %}
                                                                                    </td>
                                                                                {% else %}
                                                                                    <td colspan="2"  >
                                                                                        {{s.course}}
                                                                                        {% if not  s.room == null %}
                                                                                         S{{s.room.number}}
                                                                                        {% endif %}
                                                                                    </td>
                                                                                {% endif %}
                                                                            {% else %}
                                                                                <td > {{s.course}} S{{s.room.number}} </td>
                                                                            {% endif %}
                                                                            {% set exist = true %}

                                                                    {% endif %}

                                                                {% endfor %}

                                                                {% if exist == false %}
                                                                    {% if k > 8 %}
                                                                        {% if lastExist == false %}
                                                                            <td class="stripe-2"></td>
                                                                        {% elseif lastExist == true and lastDuration == 1 %}
                                                                            <td class="stripe-2"></td>
                                                                        {% endif %}

                                                                    {% else %}
                                                                        <td class="stripe-2"></td>
                                                                    {% endif %}
                                                                {% endif %}
                                                                
                                                                {% set lastExist = exist %}
                                                                {% set lastDuration = duration %}
                                                                {% set exist = false %}
                                                        {% endfor %}
                                                        
                                                        {% for k in range(2,5)  %}
                                                                
                                                                {% for s in tab %}
                                                                    {% set start = s.startAt|date("h") %}
                                                                    
                                                                    {% if (start == k ) %}
                                                                        
                                                                            {% set finish = s.finishAt|date("h") %} 
                                                                            {% set duration = finish - start %}
                                                                            {% if duration == 2 %}
                                                                                {% if s.course.libelle in course %}
                                                                                    <td colspan="2"  >
                                                                                        {{s.course}} S{{s.room.number}}
                                                                                        {% for s2 in tab %}
                                                                                            {% set start = s2.startAt|date("h") %}
                                                                                            {% if (start == k ) %}
                                                                                                {% if not (s2.course == s.course ) %}
                                                                                                    <br> {{s2.course}}  S{{s2.room.number}}
                                                                                                    {% set k = k + 1  %}
                                                                                                {% endif %}
                                                                                            {% endif %}
                                                                                        {% endfor %}
                                                                                    </td>
                                                                                {% else %}
                                                                                    <td colspan="2" >{{s.course}}
                                                                                        {% if not  s.room == null %}
                                                                                         S{{s.room.number}}
                                                                                        {% endif %}
                                                                                    </td>
                                                                                {% endif %}
                                                                            {% else %}
                                                                                <td  >{{s.course}} S{{s.room.number}}</td>
                                                                            {% endif %}
                                                                            {% set exist = true %}

                                                                    {% endif %}

                                                                {% endfor %}

                                                                {% if exist == false %}
                                                                    {% if k > 2 %}
                                                                        {% if lastExist == false %}
                                                                            <td class="stripe-2"></td>
                                                                        {% elseif lastExist == true and lastDuration == 1 %}
                                                                            <td class="stripe-2"></td>
                                                                        {% endif %}

                                                                    {% else %}
                                                                        <td class="stripe-2"></td>
                                                                    {% endif %}
                                                                {% endif %}
                                                                
                                                                {% set lastExist = exist %}
                                                                {% set lastDuration = duration %}
                                                                {% set exist = false %}
                                                        {% endfor %}
 
                                                       
                                                    </tr>
                                                    {% set i = i + 1 %}
                                                {% endfor %}  
                                                {% set i = 0 %}   
                                                    
                                                </tbody>
                                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->


{% endblock %} 