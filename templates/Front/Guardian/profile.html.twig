{% extends 'front-base.html.twig  ' %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        <div class="pro-menu">
            <div class="container">
                <div class="col-md-9 col-md-offset-3">
                    <ul>
                        <li><a href="{{path('guardian_profile', {'id': guardian.id})}}" class="pro-act">Profile</a></li>
                        <li><a href="{{path('guardian_children', {'id': guardian.id})}}" >Enfants</a></li>
                        <li><a href="{{path('guardian_teachers', {'id': guardian.id})}}" >Enseignants</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="stu-db">
            <div class="container pg-inn">
                <div class="col-md-3">
                    <div class="pro-user">
                        <img src="{{asset('images/student.jpg')}}" alt="user">
                    </div>
                    <div class="pro-user-bio">
                        <ul>
                            <li>
                                <h4>{{guardian.lastName}}  {{guardian.firstName}}  </h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="udb">

                        <div class="udb-sec udb-prof">
                            <h4><img src="{{asset('images/icon/db1.png')}}" alt="" /> Mon Profile </h4>
                            <div class="sdb-tabl-com sdb-pro-table">
                                <table class="responsive-table bordered">
                                    <tbody>
                                        <tr>
                                            <td>Nom</td>
                                            <td>:</td>
                                            <td>{{guardian.lastName}} </td>
                                        </tr>
                                        <tr>
                                            <td>Prénom</td>
                                            <td>:</td>
                                            <td>{{guardian.firstName}} </td>
                                        </tr>
                                        
                                        <tr>
                                            <td>Date de naissance</td>
                                            <td>:</td>
                                            <td>{{guardian.birthDate|date('d-m-Y')}} </td>
                                        </tr>
                                        <tr>
                                            <td>Lieu de naissance</td>
                                            <td>:</td>
                                            <td>{{guardian.birthplace}} </td>
                                        </tr>
                                        <tr>
                                            <td>Téléphone</td>
                                            <td>:</td>
                                            <td>{{guardian.tel}}</td>
                                        </tr>
                                        <tr>
                                            <td>Adresse</td>
                                            <td>:</td>
                                            <td>{{guardian.address}}</td>
                                        </tr>
                                        <tr>
                                            <td>E-mail</td>
                                            <td>:</td>
                                            <td>{{guardian.email}}</td>
                                        </tr>
                                        <tr>
                                            <td>Sexe</td>
                                            <td>:</td>
                                            <td>{{guardian.sexe}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="sdb-bot-edit">
                                    
                                    <a href="#" ><i class="fa fa-pencil"></i> Modifier mon profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
