{% extends 'front-base.html.twig  ' %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        {{ include('Front/Teacher/Exam/_menu.html.twig') }}
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Teacher/Profile/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">
                        <div class="udb-sec udb-cour-stat">
                        {% for message in app.flashes('fail') %}
                            <div class="alert alert-danger" >{{ message }}</div>
                        {% endfor %}
                        <h4><img src="{{asset('images/icon/db5.png')}}" alt="" />Examens {{teacher.specialty}}:
                            {% if exam.type == 0 %} Orale
                            {% elseif exam.type == 1 %} TP
                            {% elseif exam.type == 2 %} Controle1
                            {% elseif exam.type == 3 %} Controle2
                            {% elseif exam.type == 4 %} Synthése1
                            {% elseif exam.type == 5 %} Synthése2
                            {% endif %}
                        </h4>
                            {{ form_start(form)}} 
                                <div class="pro-con-table">
                                        <table class="bordered responsive-table">
                                            <thead>
                                                <tr>
                                                    <th>Nom & Prénom</th>
                                                    <th>Note</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                {% for row in form.studentExams %}
                                                    <tr> 
                                                        <td>{{row.vars.value.student}}</td>  
                                                        <td>{{ form_row(row)}}</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                        
                                </div>
                                <button class="btn">{{ button_label|default('Enregistrer') }}</button>
                                <br><br><br>
                            {{ form_end(form)}}
                            
                        </div>
                        
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->


{% endblock %} 