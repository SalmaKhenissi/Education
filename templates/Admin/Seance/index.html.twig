{% extends 'admin-base.html.twig' %}


{% block body %}
<!--== BODY INNER CONTAINER ==-->
            <div class="sb2-2">
            <!--== breadcrumbs ==-->
                <div class="sb2-2-2">
                    <ul>
                        <li><a href="{{path('admin_dashbord')}}"><i class="fa fa-home" aria-hidden="true"></i> Acceuil</a>
                        </li>
                        <li class="active-bre"><a href="{{ path('admin_section_index')}}"> Liste des Classes</a></li>
                        <li class="active-bre"><a href="{{ path('admin_section_show' ,{'id':id})}}">Détails classe</a> </li>
                        <li class="active-bre"><a href="#"> Liste des séances</a></li>
                    </ul>
                </div>
                <div>
                </div>
                <div class="sb2-2-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-inn-sp">
                                <div class="inn-title">
                                    <div class="container">
                                        <h4>Les séances du " {{day}} "</h4>
                                        
                                    </div>
                                </div>
                                <div class="tab-inn">
                                    <div class="table-responsive table-desi">
                                        
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Séance</th>
                                                    <th>Fin</th>
                                                    <th>Début</th>
													<th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            
                                            {% for s in seances %}
                                                <tr>
                                                    <td>{{ s.course}}</td>
                                                    <td>
                                                        {% set start = s.startAt|date("h") %}
                                                        {% if start < 8 %}
                                                            {{start}}:00 PM
                                                        {% else %}
                                                            {{start}}:00 AM
                                                         {% endif %}
                                                    </td>
                                                    <td>
                                                        {% set finish = s.finishAt|date("h") %}
                                                        {% if finish < 8 %}
                                                            {{finish}}:00 PM
                                                        {% else %}
                                                            {{finish}}:00 AM
                                                         {% endif %}
                                                    </td>
                                                    <td>
                                                       <a href="{{path('admin_seance_edit',{'id':s.id  })}}"><span class="fa fa-pencil"> Modifier</span></a>
                                                       {{ include('Admin/Seance/_delete_form.html.twig') }}
                                                        
                                                    </td>
											     </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}