{% extends 'front-base.html.twig  ' %}
{% set i = 0 %}
{% set nbM = 0 %}
{% block stylesheets %}
    <style>
    table, th, td {
        border: 2px solid gray;
    }
    th, td {
        padding: 10px;
        text-align: center;
        color : gray;
    }
    .color {
        background-color: #84add6;
        color: white;
    }


    </style>    
{% endblock %}
{% block body %}
<!--SECTION START-->
    <section>
        <div class="pro-cover">
        </div>
        <div class="pro-menu">
            <div class="container">
                <div class="col-md-9 col-md-offset-3">
                    <ul>
                        <li><a href="{{path('student_profile', {'id': student.id})}}">Profile</a></li>
                        <li><a href="{{path('student_timetable', {'id': student.id})}}" >Emploi du temps</a></li>
                        <li><a href="{{path('student_discipline', {'id': student.id})}}" >Discipline</a></li>
                        <li><a href="{{path('student_exams', {'id': student.id})}}">Examens</a></li>
                        <li><a href="{{path('student_result_average', {'id': student.id})}}" class="pro-act">Résultats</a></li>
                        <li><a href="{{path('student_obs', {'id': student.id})}}">Observations</a></li>
                        <li><a href="{{path('student_doc_index', {'id': student.id})}}" >Documents</a></li>
                        
                    </ul>
                </div>
            </div>
        </div>
        <div class="stu-db">
            <div class="container pg-inn">
                {{ include('Front/Student/Profile/_profile_photo.html.twig') }}
                <div class="col-md-9">
                    <div class="udb">
                        
                        <div class="udb-sec udb-cour-stat">
                            <h4><img src="{{asset('images/icon/cor1.png')}}" alt="" />Résultats Trimesterielles:   </h4>
                            
                            <div class="pro-con-table">
                                <table>
                                   <thead>
                                        <tr>
                                            <th class="color">Période</th>
                                            <th class="color">Notes</th>
                                            <th class="color">Moyenne</th>
                                            {#<th>Rang</th>#}
                                        </tr>
                                    </thead>

                                    <tbody>
                                            <tr>
                                                <td>1ére Trimestre</td>
                                                <td><a href="{{path('student_result_notes', {'id': student.id , 'quarter': 1 })}}"><u>Notes</u></a> </td>
                                                <td>{% if tabA|length >= 1 %}
                                                         {{tabA[1]|slice(0,5)}} 

                                                     {% endif %} 
                                                </td>
                                               {#} <td>{% if tabA|length >= 1 %}
                                                        {{tabR[1]}} 
                                                    {% endif %}
                                                 </td>#}                                          
                                            </tr>
                                            <tr>
                                                <td>2éme Trimestre</td>
                                                <td><a href="{{path('student_result_notes', {'id': student.id , 'quarter': 2 })}}"><u>Notes</u> </a></td>
                                                <td>{% if tabA|length >= 2 %}
                                                         {{tabA[2]|slice(0,5)}} 
                                                         
                                                     {% endif %} 
                                                </td>
                                               {#} <td>{% if tabA|length >= 2 %}
                                                        {{tabR[2]}} 
                                                    {% endif %}
                                                </td>#}
                                            </tr>
                                        
                                            <tr>
                                                <td>3éme Trimestre</td>
                                                <td><a href="{{path('student_result_notes', {'id': student.id , 'quarter': 3 })}}"><u>Notes</u></a> </td>
                                                <td>{% if  tabA|length == 4  %}
                                                         {{tabA[3]|slice(0,5)}} 
                                                    {% endif %}
                                                </td>
                                              {#}  <td>{% if  tabA|length == 4  %}
                                                        {{tabR[3]}} 
                                                    {% endif %}
                                                </td>#}
                                            </tr>
                                    <tbody>
                                </table>
                            </div>
                        </div>
                        {% if  tabA|length == 4  %}
                        <div class="udb-sec udb-cour-stat">
                                <h4><img src="{{asset('images/icon/cor1.png')}}" alt="" />Résultat Final :   </h4>
                                <div class="pro-con-table">
                                    <h5>Moyenne Générale : 
                                        {% if not tabA[3] == null %}
                                            <span>{{tabA[4]|slice(0,5)}}  </span>
                                        {% endif %}
                                    </h5><br><br>
                                    {#} <p>Rang : {{tabR[4]}}   </p>#}
                                    <h5>Décision : 
                                        {% if  decision != null %}
                                            {% if not tabA[3] == null %}
                                            
                                                <span> {{decision}} </span>
                                            {% endif %}
                                        {% endif %}
                                    </h5>
                                </div>
                                
                        </div>
                        {% endif %}
                        
                        
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--SECTION END-->


{% endblock %} 